<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="connection.url">jdbc:h2:mem:test</property>
        <property name="connection.username">sa</property>
        <property name="connection.password">/</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="by.ecp.entity.Country"/>
        <mapping class="by.ecp.entity.Genre"/>
        <mapping class="by.ecp.entity.PaymentModel"/>
        <mapping class="by.ecp.entity.Platform"/>
        <mapping class="by.ecp.entity.Privilege"/>
        <mapping class="by.ecp.entity.Rank"/>
        <mapping class="by.ecp.entity.Setting"/>
        <mapping class="by.ecp.entity.Stage"/>
        <mapping class="by.ecp.entity.User"/>
        <mapping class="by.ecp.entity.Painting"/>
    </session-factory>
</hibernate-configuration>
