<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/projectgame</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="by.ecp.entity.Country"/>
        <mapping class="by.ecp.entity.Genre"/>
        <mapping class="by.ecp.entity.PaymentModel"/>
        <mapping class="by.ecp.entity.Platform"/>
        <mapping class="by.ecp.entity.Privilege"/>
        <mapping class="by.ecp.entity.Rank"/>
        <mapping class="by.ecp.entity.Setting"/>
        <mapping class="by.ecp.entity.Stage"/>
        <mapping class="by.ecp.entity.User"/>
        <mapping class="by.ecp.entity.Vacancy"/>
        <mapping class="by.ecp.entity.Company"/>
    </session-factory>
</hibernate-configuration>
